        <form autocomplete="off" method="POST" action="/writer/updatePost/<%=post[0].id%>" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-lg-3 col-xs-12">  
                    <div class="form-group">
                        <label>Tiêu đề</label>
                        <input name="title" type="text" class="form-control" placeholder="Nhập tiêu đề..." value="<%=post[0].title%>">
                    </div>
                    <div class="form-group">
                        <label>Nội dung tóm tắt</label>
                        <input name="abstract" type="text" class="form-control" placeholder="Nhập nội dung tóm tắt..." value="<%=post[0].abstract%>">
                    </div>
                    <div class="form-group">
                        <label>Ảnh</label>
                        <input type="file" name="image">
                    </div>
                    <div class="form-group">
                        <div>
                            <label>Chuyên mục</label>
                            <select id="inputState" name="idCategory" class="form-control">
                                <option selected="selected">Chọn chuyên mục</option>
                                
                                <%category.forEach(function(rows){%>
                                
                                    <%if(rows.id === post[0].idCategory){%>
                                        <option value="<%=rows.id%>" selected="selected"><%=rows.name%></option>
                                    <%}else{%>
                                        <option value="<%=rows.id%>"><%=rows.name%></option>
                                    <%}%>
                                    
                                <%});%>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <label>Tag</label>
