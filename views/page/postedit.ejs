                                <option selected="selected">Chọn Tag</option>
                                <%tag.forEach(function(rows){%>
                                    <%if(rows.id === post[0].idTag){%>
                                        <option value="<%=rows.id%>" selected="selected"><%=rows.name%></option>
                                    <%}else{%>
                                        <option value="<%=rows.id%>"><%=rows.name%></option>
                                    <%}%>
                 
                                <%});%>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 ml-100 xs-ml-150">
                            <button type="submit" class="btn btn-primary">Lưu bài viết</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-lg-9 col-xs-12">
                    <script src="../../ckeditor/ckeditor.js"></script>
                    <label>Nội dung</label>
                    <textarea class="ckeditor" name="editor"><%-post[0].content%></textarea>
                </div>
            </div>            
        </form>
