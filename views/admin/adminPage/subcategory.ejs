  <div class="subcategory">
    <div class="container">
      <div class="row">
        <div class="col-md-7">
          <div class="card mb-3">
              <div class="card-header">
                <i class="fas fa-list"></i>
                SubCategory List</div>
              <div class="card-body">
                <div class="table-responsive">
                <form id="formDeleteCategory" method="POST" action="/admin/category/<%=idcategory%>/delete/">
                  <table id="dataTable" class="table table-bordered" width="100%" cellspacing="0">
                    <thead align="center">
                      <tr>
                        <th style="display:none">ID</th>
                        <th style="width:30px">Oder</th>
                        <th>Name</th>
                        <th style="width:78px">Edit</th>
                      </tr>
                    </thead>
                    <%subcategory.forEach(function(rows){%>
                      <tbody align="center">
                        <tr>
                          <td style="display:none" class="idCategory"><%= rows.id%></td>
                          <td class="oderCategory"><%= rows.oder%></td>
                          <td class="nameCategory"><%= rows.name%></td>
                          <td>
                            <button type="button" id="btnEdit" class="btn btn-info"><i class="fas fa-edit"></i></button>
                            <button id="btnDelete" type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                          </td>
                        </tr>
                      </tbody>
                    <%});%>
                  </table>
                  </form>
                </div>
              </div>
