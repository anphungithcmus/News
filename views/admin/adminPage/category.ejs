<%include ../adminLayout/header%>
<%include ../adminLayout/sidebar%>
    <!-- DataTables Example -->
    <div class="container">
      <div class="row">
        <div class="col-md-7">
          <div class="card mb-3">
              <div class="card-header">
                <i class="fas fa-list"></i>
                Category List</div>
              <div class="card-body">
                <div class="table-responsive">
                <form id="formDeleteCategory" method="POST">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead align="center">
                      <tr>
                        <th style="display:none">ID</th>
                        <th style="width:30px">Oder</th>subcategory
                        <th>Name</th>
                        <th style="width:78px">Edit</th>
                      </tr>
                    </thead>
                    <%category.forEach(function(rows){%>
                      <tbody align="center">
                        <tr>
                          <td style="display:none" class="idCategory"><%= rows.id%></td>
                          <td class="oderCategory"><%= rows.oder%></td>
                          <td class="nameCategory"><%= rows.name%></td>
        
                          <td>
                            <button type="button" id="btnEdit" class="btn btn-info"><i class="fas fa-edit"></i></button>
                            <button id="btnDelete" type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                          </td>
                        </tr>
                      </tbody>
                    <%});%>
                  </table>
                  </form>
                </div>
              </div>
              <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
          </div>
        </div>
        <div class="col-md-5 addCategory">
          <div class="card mb-3">
            <div class="card-header">
              <i class="fas fa-plus-circle"></i>
              Add Category
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <form method="POST" action="category/add">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th>Oder</th>
                        <th>Name</th>
                      </tr>
                    </thead>
                    <tr>
                      <td>
                        <input name="inputOder" style="width:60px">
                      </td>
                      <td>
                        <input name="inputName" style="width:285px">
                      </td>
                    </tr>
                    <tr>
                      <td colspan="2" align="center">
                      <button type="submit" class="btn btn-info">Save</button>
                      </td>
                    </tr>
                  </table>
                </form>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-5 editCategory">
          <div class="card mb-3">
            <div class="card-header">
            <i class="fas fa-edit"></i>
              Edit Category
              <button id="btnAddCategory" class="btn btn-info" style="margin-left:230px"><i class="fas fa-plus-circle"></i></button>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <form id="formEditCategory" method="POST">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th>Oder</th>
                        <th>Name</th>
                      </tr>
                    </thead>
                    <tr>
                      <td>
                        <input name="inputOder" id="inputOder" style="width:60px">
                      </td>
                      <td>
                        <input name="inputName" id="inputName" style="width:285px">
                      </td>
                    </tr>
                    <tr>
                      <td colspan="2" align="center">
                        <button type="submit" class="btn btn-info">Save</button>    
                      </td>
                    </tr>
                  </table>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div> 
    </div>

<% include ../adminLayout/footer%>